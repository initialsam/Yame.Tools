@page
@model CoreWeb.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreWeb</title>
    <link rel="stylesheet" href="~/lib/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="~/css/adminlte.css" /> @*包含bootstrap v4.4.1 *@
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .login-page {
            height: 70vh;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            Yame Web
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                @*<p class="login-box-msg">Sign in to start your session</p>*@

                <form method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    @if (ViewData.ModelState.IsValid == false)
                    {
                        <div class="text-danger">
                            <ul>
                                @foreach (var error in ViewData.ModelState.SelectMany(x => x.Value.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input class="form-control" placeholder="帳號" asp-for="Input.Username" autofocus>
                        <span class="text-danger" asp-validation-for="Input.Username"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Watchword"></label>
                        <input type="password" class="form-control" placeholder="密碼" asp-for="Input.Watchword" autocomplete="off">
                        <span class="text-danger" asp-validation-for="Input.Watchword"></span>
                    </div>

                    <div class="form-group">
                        <button class="btn btn-primary">Login</button>
                    </div>

                </form>

                @*<div class="social-auth-links text-center mb-3">
                        <p>- OR -</p>
                        <a href="#" class="btn btn-block btn-primary">
                            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
                        </a>
                        <a href="#" class="btn btn-block btn-danger">
                            <i class="fab fa-google-plus mr-2"></i> Sign in using Google+
                        </a>
                    </div>*@
                <!-- /.social-auth-links -->
                @*<p class="mb-1">
                        <a href="forgot-password.html">I forgot my password</a>
                    </p>
                    <p class="mb-0">
                        <a href="register.html" class="text-center">Register a new membership</a>
                    </p>*@
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


</body>
</html>